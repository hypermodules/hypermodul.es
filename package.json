{
  "name": "hypermodul.es",
  "description": "source for the http://hypermodul.es website",
  "version": "1.0.0",
  "author": "Bret Comnes",
  "bugs": {
    "url": "https://github.com/hypermodules/hypermodul.es/issues"
  },
  "devDependencies": {
    "browserify": "^13.1.0",
    "budo": "^9.2.0",
    "npm-run-all": "^3.1.0",
    "postcss": "^5.2.0",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-cli": "^2.6.0",
    "postcss-cssnext": "^2.8.0",
    "postcss-import": "^8.1.2",
    "postcss-reporter": "^1.4.1",
    "snazzy": "^5.0.0",
    "standard": "^8.0.0",
    "style.css": "^1.0.0-alpha-1",
    "watchify": "^3.7.0"
  },
  "homepage": "https://github.com/hypermodules/hypermodul.es#readme",
  "license": "ISC",
  "main": "index.js",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hypermodules/hypermodul.es.git"
  },
  "scripts": {
    "build": "run-s build:*",
    "build:css": "postcss -c postcss.config.json",
    "build:js": "browserify index.js -o dist/bundle.js",
    "prepublish": "npm run build",
    "pretest": "npm run build",
    "start": "run-p watch:*",
    "test": "standard | snazzy",
    "watch:css": "npm run build:css -- --watch",
    "watch:js": "budo index.js:dist/bundle.js --live --open"
  }
}
